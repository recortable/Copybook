
<%= simple_form_for publication do |form| %>
    <%= form.input :slug %>
    <%= form.input :name %>
    <%= form.association :license , :include_blank => false %>
    <%= form.input :description %>
    <%= form.input :art %>
    <%= form.input :payment_method, :collection => ['tinypay.me'], :include_blank => false %>
    <%= form.input :payment_code %>
    <%= form.submit %>
<% end %>